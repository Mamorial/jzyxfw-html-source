/*
    改写 ------------------------------
*/
/* 覆盖bootstrap样式 */
.input-group-addon {
    background-color: #D2D2D2;
}

.navbar-inverse {
    background-color: rgba(2, 2, 2, 0.75);
}

.well {
    background-color: rgba(255, 255, 255, 0.75);
}


/* 默认的warning颜色太浅了 */
.alert-warning {
    background-color: #FFED90;
}

.datetimepicker {
    font-size: 12px;
}

/* 为什么默认的里面要有z-index:2? */
.input-group .form-control {
    z-index: auto;
}

/* autoComplete样式*/
/* 页面上悬浮一个这个东东，去掉*/
.ui-helper-hidden-accessible{
    display: none;
}
.ui-menu .ui-menu-item {
    position: relative;
    margin: 0;
    padding: 3px 1em 3px .4em;
    cursor: pointer;
    min-height: 0;
    font-size: 12px;
}

.ui-menu .ui-menu-item:hover {
    background-color: rgb(93, 155, 167);
    color: white;
    font-weight: bolder;
}

.ui-menu .ui-state-focus {
    background-color: rgb(93, 155, 167);
    color: white;
    font-weight: bolder;
}

.ui-menu {
    list-style: none;
    position: absolute;
    padding: 0;
    margin: 0;
    display: block;
    outline: none;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 0 0px 4px 4px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
    -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    /*@wangyi 2015-8-3 这里修改样式*/
    max-height: 250px;
    /*@wangyi 2015-8-7 这里autocomplete 会占用 等大的空间，这样做就是不让他占用空间，fix with position: absolute;*/
    /*margin-bottom: -250px;*/
    overflow-y: auto;
    overflow-x: hidden;
}

/* 覆盖bootstrap datatables 的 loading样式*/
div.dataTables_processing {
    background: -webkit-gradient(linear, left top, right top, color-stop(0%, rgba(189, 234, 173, 0)), color-stop(25%, rgba(189, 234, 173, 0.9)), color-stop(75%, rgba(189, 234, 173, 0.9)), color-stop(100%, rgba(189, 234, 173, 0)));
    background: -webkit-linear-gradient(left, rgba(189, 234, 173, 0) 0%, rgba(189, 234, 173, 0.9) 25%, rgba(189, 234, 173, 0.9) 75%, rgba(189, 234, 173, 0) 100%);
    background: -moz-linear-gradient(left, rgba(189, 234, 173, 0) 0%, rgba(189, 234, 173, 0.9) 25%, rgba(189, 234, 173, 0.9) 75%, rgba(189, 234, 173, 0) 100%);
    background: -ms-linear-gradient(left, rgba(189, 234, 173, 0) 0%, rgba(189, 234, 173, 0.9) 25%, rgba(189, 234, 173, 0.9) 75%, rgba(189, 234, 173, 0) 100%);
    background: -o-linear-gradient(left, rgba(189, 234, 173, 0) 0%, rgba(189, 234, 173, 0.9) 25%, rgba(189, 234, 173, 0.9) 75%, rgba(189, 234, 173, 0) 100%);
    background: linear-gradient(to right, rgba(189, 234, 173, 0) 0%, rgba(189, 234, 173, 0.9) 25%, rgba(189, 234, 173, 0.9) 75%, rgba(189, 234, 173, 0) 100%);
}

table.dataTable.table-condensed thead .sorting:after, table.dataTable.table-condensed thead .sorting_asc:after, table.dataTable.table-condensed thead .sorting_desc:after {
    float: right;
    display: block;
    position: initial;
}

/*
    扩展 ------------------------------
*/

/* 默认的panel的padding太大 */
.panel-sm .panel-heading, .panel-sm .panel-footer {
    padding-top: 5px;
    padding-bottom: 5px;
}

.panel-head-lite {
    padding: 5px 7.5px;
}

/*
    让tab-content和上面的标签一体 ，算是一种扩展
*/
.tab-content-ul {
    border: 1px solid #ddd;
    border-top-width: 0;
    border-radius: 0 0 4px 4px;
}

/*

    对切换的标签页有工具按钮，修改样式
    用在稽核原始模型，增加数据源，点击一次增加一个tab
*/

.nav-tabs > li > .tab-tool {
    cursor: pointer;
    background-color: #fff;
    margin-right: 2px;
    border-radius: 4px 4px 0 0;
}

.nav-tabs > li > .tab-tool:hover {
    background-color: #E2E2E2;
}

.nav > li > .tab-tool {
    position: relative;
    display: block;
    padding: 10px 15px;
}

/*
    li的选中hover效果
*/
.list-hover .list-group-item:hover {
    background-color: rgba(53, 157, 133, 0.1);
}

.list-hover .cur {
    background-color: rgba(53, 157, 133, 0.3);
}

.list-hover .cur:hover {
    background-color: rgba(53, 157, 133, 0.5);
}

/*
    也是有个选中效果，忘了是啥了
*/
.ui-selectable .ui-selecting {
    background-color: rgba(176, 176, 255, 0.5);
}

.ui-selectable .ui-selected {
    background-color: rgb(176, 176, 255);
}

/*
    新建的dark样式~
*/

.btn-dark {
    background-color: #354C52;
    border-color: #222B2D;
    color: #fff;
}

.btn-dark.active, .btn-dark.focus, .btn-dark:active, .btn-dark:focus, .btn-dark:hover, .open > .dropdown-toggle.btn-dark {
    color: #fff;
    background-color: #273E44;
    border-color: #0F1719;
}

.label-dark {
    background-color: #354C52;
}

.alert-dark {
    background-color: #678790;
    color: #fff;
}

/* 官网的左边颜色条的展示*/
.bs-callout {
    padding: 20px;
    /*margin: 20px 0;*/
    border: 1px solid #BEBBBB;
    border-left-width: 5px;
    border-radius: 3px;
}

.bs-callout-sm {
    padding: 10px 20px;
}

.bs-callout-danger {
    border-left-color: #ce4844
}

.bs-callout-danger h4 {
    color: #ce4844
}

.bs-callout-warning {
    border-left-color: #aa6708
}

.bs-callout-warning h4 {
    color: #aa6708
}

.bs-callout-info {
    border-left-color: #1b809e
}

.bs-callout-info h4 {
    color: #1b809e
}

.bs-callout-success {
    border-left-color: #5cb85c
}

.bs-callout-success h4 {
    color: #5cb85c
}

.bs-callout-dark {
    border-left-color: #0F1719
}

.bs-callout-dark h4 {
    color: #354C52
}

/* bootstrap tooltip 样式更改*/
.tooltip-inner {
    background-color: #6FC7C7;
    font-size: 13px;
    word-break: break-all;
    text-align: left;
    white-space: normal;
}

.tooltip.in {
    filter: alpha(opacity=100);
    opacity: 1;
}

.tooltip.top .tooltip-arrow {
    border-top-color: #5CC799;
}

/*  ztree 的改造，有选中的新效果 */
.ztree {
    border: 0;
    width: 100%;
    overflow-y: auto;
    overflow-x: hidden;
    /*background-color: #ffffff;*/
}

.ztree-selected li a.curSelectedNode {
    padding-top: 0px;
    /*background-color: #FFFFFF;*/
    color: black;
    height: 16px;
    opacity: 0.8;
    border: 0;
    background-color: #1d9d74;
    color: #ffffff;
    border-radius: 4px;
    padding-bottom: 2px;
    padding-left: 5px;
    padding-right: 5px;
}

.ztree-selected li a.curSelectedNode span {
    font-weight: bolder;
    color: #ffffff;
}








